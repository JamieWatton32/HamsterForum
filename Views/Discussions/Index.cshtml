@model IEnumerable<HamsterForum.Models.Discussion>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-4">Discussions</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100 overflow-hidden">
                <div class="card-header">
                    <h4 class="card-title mb-0">@Html.DisplayFor(modelItem => item.Title)</h4>
                </div>
                <div class="card-body h-auto">
                    <div class="d-flex">
                        <img src="@Url.Content("/images/" + item.ImageFilename)"
                             alt="Picture for @item.Title"
                             class="img-thumbnail me-3"
                             style="max-height:75px; width:auto;" />
                        <p class="card-text" style="display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 3; overflow: hidden;">
                            @Html.DisplayFor(modelItem => item.Content)
                        </p>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <small class="text-muted">@item.CreateDate.ToShortDateString()</small>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.DiscussionId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="GetDiscussion" asp-controller="Home" asp-route-id="@item.DiscussionId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.DiscussionId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
