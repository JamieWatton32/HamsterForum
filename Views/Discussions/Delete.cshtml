@model HamsterForum.Models.Discussion

@{
    ViewData["Title"] = "Delete";
}

<div class="container bg-light p-4 rounded shadow-sm">
    <h3 class="text-danger text-center mb-4">Are you sure you want to delete this?</h3>

    <div class="bg-white p-4 rounded">
        <h4 class="text-dark mb-3">Discussion Details</h4>
        <hr />

        <!-- Card for Title -->
        <div class="mb-3">
            <h5 class="text-muted">Title</h5>
            <p>@Html.DisplayFor(model => model.Title)</p>
        </div>

        <!-- Card for Content -->
        <div class="mb-3">
            <h5 class="text-muted">Content</h5>
            <p>@Html.DisplayFor(model => model.Content)</p>
        </div>

        <!-- Card for Image Filename -->
        <div class="mb-3">
            <h5 class="text-muted">Image Filename</h5>
            <p>@Html.DisplayFor(model => model.ImageFilename)</p>
        </div>

        <!-- Card for Create Date -->
        <div class="mb-3">
            <h5 class="text-muted">Created On</h5>
            <p>@Html.DisplayFor(model => model.CreateDate)</p>
        </div>

        <div class="text-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="DiscussionId" />
                <button type="submit" class="btn btn-danger btn-lg me-2">Delete</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </form>
        </div>
    </div>
</div>


